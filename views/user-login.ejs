<h2>Welcome to the Utopia</h2>
<h4 class="for-login">Login</h4>
<% if(err_msg!=undefined){ %>
  <span class="error_validate flash_msg" style="color: red;">
    <%= err_msg %>
  </span>
  <% }%>
    <% if(success_msg!=undefined){ %>
      <span class=" succ_flash_msg" style="color: green;">
        <%= success_msg %>
      </span>
      <% }%>
        <form method="post" action="/login" id="login">
          <input type="hidden" name="_csrf" />
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter Email" id="email" name="email"
              data-rule-required="true" data-msg-required="Please enter Email address." data-rule-email="true"
              data-msg-email="Please enter valid Email address.">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" id="password" name="password"
              type="password" data-rule-required="true" data-msg-required="Please enter Password.">
          </div>
          <div class="forgot-pass-link">
            <a href="/forget-password">Forgot Password?</a>
          </div>
