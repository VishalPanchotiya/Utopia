<%- include('header') -%>

    <div class="heading-row mb-20">
        <div class="row align-item-center">
            <div class="col-lg-6">
                <h3 class="page-title"><span class="page-title-icon bg-gradient-primary text-white mr-2"><i
                            class="mdi mdi-account"></i></span> Profile Info </h3>
            </div>
        </div>
    </div>

    <% if(err_msg!=undefined){ %>
        <span class="error_validate flash_msg" style="color: red;">
            <%= err_msg %>
        </span>
        <% }%>
            <% if(success_msg!=undefined){ %>
                <span class=" succ_flash_msg" style="color: green;">
                    <%= success_msg %>
                </span>
                <% }%>
                    <section class="dash-inner-sec">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 m-auto">
                                <div class="mb-3">
                                    <ul class="nav nav-tabs profile-tabs" id="myTab" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#info1"
                                                role="tab" aria-controls="home" aria-selected="true">User Info</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#info2"
                                                role="tab" aria-controls="profile" aria-selected="false">Password</a>
                                        </li>

                                    </ul>

                                </div>
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="info1" role="tabpanel"
                                        aria-labelledby="home-tab">
                                        <form method="POST" action="/update-profile" id="profile_form">
                                            <div class="dashboard-box">
                                                <div class="create-wallet-block profile-input-form">
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <div class="form-group text-left">
                                                                <label>Full Name</label>
                                                                <input class="form-control" name="name" type="text"
                                                                    value="<%=user.name%>" placeholder="<%=user.name%>">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group text-left">
                                                                <label>Email ID</label>
                                                                <input class="form-control" name="email" type="email"
                                                                    value="<%=user.email%>"
                                                                    placeholder="<%=user.email%>">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group text-left">
                                                                <label>Moble Number</label>
                                                                <input class="form-control" name="phone" type="text"
                                                                    value="<%=user.phone%>"
                                                                    placeholder="<%=user.phone%>">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <div class="form-group text-left">
                                                                <label>Date of Birth</label>
                                                                <input class="form-control" type="text" name="dob"
                                                                    value="<%=user.dob%>" placeholder="dd/mm/yyyy">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group text-left">
                                                                <label>Country</label>
                                                                <select name="country" class="form-control">
                                                                    <option>India</option>
                                                                </select>

                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group text-left">
                                                                <label>City</label>
                                                                <select name="city" class="form-control">
                                                                    <option>Indore</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="text-left mlti-btn mt-3">
                                                        <button type="submit"
                                                            class="btn btn-common light-green ml-0">Save</button>
                                                        <a type="botton" href="/user-dashboard"
                                                            class="btn btn-common light-green ml-0">Cancel</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="tab-pane fade" id="info2" role="tabpanel" aria-labelledby="profile-tab">
                                        <form method="POST" action="/change-password" id="profile_form">
                                            <div class="dashboard-box">
                                                <div class="create-wallet-block profile-input-form">
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <div class="form-group text-left">
                                                                <label>Current Password</label>
                                                                <input name="currentPassword" class="form-control"
                                                                    type="password">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group text-left">
                                                                <label>New Password</label>
                                                                <input name="newPassword" class="form-control"
                                                                    type="password">
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group text-left">
                                                                <label>Confirm Password</label>
                                                                <input name="confPassword" class="form-control"
                                                                    type="password">
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="text-center mlti-btn">
                                                        <button type="submit"
                                                            class="btn btn-common light-green ml-0">Save</button>
                                                        <a type="botton" href="/user-dashboard"
                                                            class="btn btn-common light-green ml-0">Cancel</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </section>


                    <%- include('footer');-%>