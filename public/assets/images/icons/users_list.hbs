{{> admin_inner_header}}
{{> admin_inner_sidebar}}
  <div class="content-wrapper right-side">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                   <section class="content-header">
                    <h3> Users List </h3>
                  
          </section>
                <div class="card-body">
                  {{#if expressFlash.edit_fail}}
                    <div class="alert alert-danger">{{expressFlash.edit_fail}}</div>
                  {{/if}}

                  {{#if expressFlash.edit_success}}
                    <div class="alert alert-success">{{expressFlash.edit_success}}</div>
                  {{/if}}
                  <div class="table-responsive">
                    <table class="table table-striped" id="user_table">
                      <thead>
                        <tr>
                          <th>
                            User
                          </th>
                          <th>
                            Name
                          </th>
                          <th>
                            Email
                          </th>
                            {{!--
                          <th>
                            Email Verification Status
                          </th>
                          
                          <th>
                            Mobile No.
                          </th>
                          <th>
                            Wallet Address
                          </th>
                          <th>
                            User Address
                          </th>
                          --}}
                          <th>
                            Created At
                          </th>
                        {{!--   <th>
                            Updated At
                          </th>
                          <th>
                            Action
                          </th> --}}

                        </tr>
                      </thead>
                         <tbody>
                      {{#if user_details}}
                      {{#each user_details}}
                    
                      <tr>
                   {{#if profile_image}}
                  <td> <img src="/upload_user_profile/{{profile_image}}" style="width: 50px;height: 50px;"></td>
                  {{else}}
                   <td><img src="admin_assets/images/faces-clipart/pic-1.png" style="width: 50px;height: 50px;"></td>
                   {{/if}}
                        <!-- <td><img src="{{check_image_exist this.profile_image 1}}"></td> -->
                        <td>{{escape name}}</td>
                        <td>{{email}}</td>
                        {{!--
                        <td>{{email_varify_status}}</td>
                        <td>{{mobile_no}}</td>
                        <td>{{address}}</td>
                        <td>{{user_address}}  {{country}}  {{state}}  {{city}} </td>--}}
                        <td>{{dateFormat created_at "YYYY-MM-DD hh:mm:ss"}}</td>
                       {{!--  {{#if updated_at}}
                        <td>{{dateFormat updated_at "YYYY-MM-DD hh:mm:ss"}}</td>
                        {{else}}
                        <td>{{N/A}}</td>
                        {{/if}}
                        <td>
                          <ul class="edit-list icons-list icon-width">
                            <li><a title="Edit" href="/edit-user/{{_id}}"><i class="fa fa-pencil-square-o"></i></a>
                            </li>
                            <li><a title="Delete" onclick="return confirm_deletion();" href="/delete-user/{{_id}}"><i class="fa fa-remove"></i></a>
                            </li>
                           </a></ul>
                        </td> --}}
                    </tr>
                      {{/each}}
                      {{/if}}
                    </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{> admin_inner_footer}}

    <script type="text/javascript">
            
        $(document).ready(function () {

        $('#user_table').DataTable({
           
        });
        $('#user_table_filter input').addClass('form-control');
        $('#user_table_filter label').addClass('card-title');
        $('#user_table_length label').addClass('card-title');
        $('#user_table_paginate a').addClass('card-title');
        $('#user_table_info').addClass('card-title');

    });

     function confirm_deletion(){

        if(confirm('Really you want to delete user?')){

          return true;

        }else{

          return false;
        }
     }

</script>
